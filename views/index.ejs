<%- include('partials/header') %>

<main class="main-content index_container">
  <h1>Welcome to the Math Competition App</h1>

  <p>
    Your current streak:
    <strong>
      <% if (typeof streak !== 'undefined' && streak > 0) { %> <%= streak %> <%
      } else if (leaderboards.length > 0) { %> Highest streak so far: <%=
      leaderboards[0].streak %> <% } else { %> No streak yet! <% } %>
    </strong>
  </p>

  <div class="navigation__container">
    <a href="/leaderboards"> View Leaderboards </a>
    <a href="/quiz"> Start Quiz </a>
  </div>
</main>

<%- include('partials/footer') %>
