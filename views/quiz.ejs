<%- include('partials/header') %>
<main class="main-content quiz_container">
  <h1>Math Quiz</h1>
  <p>Answer the question below:</p>

  <!-- Display the current math question -->
  <p class="question"><%= question %></p>

  <form action="/quiz" method="POST" class="quiz-form">
    <input type="hidden" name="correctAnswer" value="<%= correctAnswer %>" />
    <!-- Make sure the correct answer is passed properly -->

    <label for="answer">Your Answer:</label>
    <input type="number" id="answer" name="answer" required />
    <!-- Input for user's answer -->
    <button type="submit" class="btn">Submit</button>
  </form>

  <p>Current Streak: <strong><%= streak %></strong></p>
</main>
<%- include('partials/footer') %>
